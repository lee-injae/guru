<h1>Welcome to Guru</h1>
<h3>Create a calming presence in your life</h3>

<%if flash[:error_message]%>
    <div class = 'error'><%= flash[:error_message] %></div>
<%end%>

<%= form_tag login_path do %>
    <%= label_tag :username %>
    <%= text_field_tag :username %>
    <div></div>
    <%= label_tag :password%>
    <%= password_field_tag :password %>
    <div></div>
    <%= submit_tag "Login" %>
<%end%>
