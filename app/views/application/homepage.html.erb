<h1 class = 'center'>Welcome to Guru</h1>
<h3 class = 'center'>Create a calming presence in your life</h3>

<%if flash[:error_message]%>
    <div class = 'error'><%= flash[:error_message] %></div>
<%end%>
 
<%= form_tag login_path do %>
<div class = 'center'>
    <%= label_tag :username %>
    <%= text_field_tag :username %>
</div>
<div class = 'center'> 
    <%= label_tag :password%>
    <%= password_field_tag :password %>
</div>
    <div class = 'center'><%= submit_tag "Login" %></div>
<%end%>
