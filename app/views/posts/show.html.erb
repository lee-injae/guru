<h1>Post Detail</h1>

<h3>User:</h3><%=@post.user.name%>
<h3>Title:</h3><%=@post.title%>
<h3>Description:</h3><%=@post.description%>
<h3>Type:</h3><%=@post.media_type%>
<h3>Zens:</h3>
<p><%=@post.zens.count%> <%= (@post.zens.count) == 1 ? 'Zen' : 'Zens'%></p>

<h3>Comments:</h3>
<ul>
<%@post.comments.each do |comment|%>
<li><%=comment.text%> <%=button_to "Delete this Comment", post_comment_path(post_id: @post.id, id: comment.id), method: "delete"%></li>
<%end%>
</ul>



<div>
<h3>Add Comment:</h3>
<%=form_for @new_comment, url: post_comments_path(@post.id) do |f|%>
<%=f.text_area :text, maxlength: 200%>
<%=f.submit "Create Comment"%>
<%end%>
</div>

<%=button_to "Delete Post", post_path(@post), method: "delete"%>
<%=button_to "Return to Posts", posts_path, method: "get"%>
<%=button_to "Zen", post_zens_path(@post), method: "post"%>
