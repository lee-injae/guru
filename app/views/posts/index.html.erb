<h1>All Posts</h1>

<ul>
<%@posts.each do |post|%>
<li><%=link_to post.title, post_path(post)%></li>
<%end%>
</ul>

<p> <%= @posts.zens.count %> <%= (@posts.zens.count) == 1 ? "Zen" : "Zens" %> </p>


<%=link_to "Create New Post", new_post_path%>
<br><br>
<%=button_to "See All Users", users_path, method: "get"%>

