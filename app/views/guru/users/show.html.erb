<h1><%=@user.first_name%>'s Detail Page</h1>

<h3>Name:</h3><%=@user.first_name%> <%=@user.last_name%>
<h3>About:</h3><%=@user.about%>
<h3>Interests:</h3><%=@user.interests%>
<h3>Posts:</h3>
<ul>
<%@user.posts.each do |post|%>
<li><%=link_to post.title, guru_post_path(post.id)%> | Zens: <%=post.zens.count%></li>
<%end%>
</ul>




<%=button_to "Delete User", guru_user_path(@user), method: "delete"%>
<%=button_to "Return to User List", guru_users_path, method: "get"%>